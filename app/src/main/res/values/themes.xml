<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/common_colorPrimary</item>
        <item name="colorPrimaryVariant">@color/common_colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/common_white</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/common_colorBackground</item>

        <!--XUI 主题配置-->
        <item name="xui_config_color_background">@color/common_colorBackground</item>
        <!--自定义标题栏样式方法1,通过自定义通用属性-->
        <item name="xui_actionbar_color">?attr/colorPrimaryVariant</item>
        <item name="xui_actionbar_text_color">@color/common_black</item>
        <item name="xui_actionbar_title_text_size">@dimen/sp_18</item>
        <item name="xui_actionbar_immersive">true</item>
        <item name="xui_actionbar_height">52dp</item>
        <item name="xui_actionbar_ic_navigation_back">@drawable/icon_black_back</item>
        <item name="tb_dividerColor">@color/common_divider_color</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/app_launcher_bg</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/SplashTheme</item>
    </style>

    <!-- Theme.AppCompat.Light.NoActionBar -->
    <style name="SplashTheme" parent="XUITheme.Phone">
        <item name="android:statusBarColor">@color/app_launcher_bg</item>
        <!--底部导航栏底色-->
        <item name="android:navigationBarColor">@color/app_launcher_bg</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!--全屏主题-->
    <style name="Theme.Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>